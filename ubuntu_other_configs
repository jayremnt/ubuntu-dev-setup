// ssh-keys
ssh-keygen -t ed25519 -C "jayremnt@gmail.com"
eval "$(ssh-agent -s)"
cat ~/.ssh/id_ed25519.pub

// fast bluetooth
sudo nano /etc/bluetooth/main.conf // FastConnectable = true
sudo systemctl restart bluetooth

